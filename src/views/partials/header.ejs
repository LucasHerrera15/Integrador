<head>    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/menu.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/js/menuMobile.js"></script>
</head>
<header class="header">
        <div class="contenedor__header">
            <a href="/"><img id="logo" src="/images/logoSinFondo.png"></a>
            <form class="barra__busqueda" action="/products/search" method="POST">
                    <input class="buscador" type="search" placeholder="Marcas, zapatillas" name="buscar"> 
                    <i class="fas fa-search"></i>
            </form>
            <span class="menu__icon"><i class="fas fa-bars" style="font-size: 1.5em; color: #FFC06D ;"></i></span>
            <nav class="navigation navigation_visible">    
                <ul>
                    <% if (locals.isLogged) { %> 
                    <div class="btn-group">
                        <button class="btn btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                           <a href="/user/perfil" id="sinPadding"><img src="/images/users/<%= locals.userLogged.fotoPerfil %>" alt="mdo" width="32" height="32" class="rounded-circle"></a> 
                         <%= locals.userLogged.nombreUsuario %>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/users/perfil">Perfil</a></li>
                            <li><a class="dropdown-item" href="/users/logout">Cerrar sesión</a></li>

                        </ul>
                      </div>
                      <a href="/products/carrito">Carrito<i class="fas fa-shopping-cart"></i></a>   
                      <a href="/products/creacionProducto">Crear producto<i class="fas fa-plus"></i></a>
                      <% } else { %>
                    <a href="/users/login">Iniciar sesión<i class="fas fa-sign-in-alt"></i></a>
                    <a href="/users/register">Registro<i class="far fa-id-card"></i></a>
                        <% } %>
                </ul>
            </nav>
        </div>    
</header>
